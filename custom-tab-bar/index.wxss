.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 70px;
  background: #3AB4F2;
  display: flex;
  align-items: center;
  margin-right: 20rpx; margin-left: 20rpx;
  border-radius: 35px;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.4);
  margin-bottom: env(safe-area-inset-bottom);
}

