/* pages/map1/map1.wxss */
.card-product {
  overflow: hidden;
  height: 240rpx;
  background: white;
  box-shadow: 0 0 30rpx rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  margin: 20rpx;
  border-radius: 10rpx;
}

.card-product image {
  height: 100%;
  width: 240rpx !important;
  object-fit: cover;
}

.card-product .h2 {
  font-size: 40rpx;
  font-weight: bold;
  margin: 10rpx 0;
}

.card-product .p {
  font-size: 30rpx;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  /* margin-top: 10rpx; */
}

.category-name {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  text-align: center;
  font-size: 40rpx;
  margin-top: 20rpx;
}

.card-product .card-product-infos {
  padding: 38rpx;
}

.bottom-margin {
  height: 230rpx;
}

.top-margin {
  height: 200rpx;
}