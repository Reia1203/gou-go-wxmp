
.space-container {

}

.space-container image {
  width: 100%;
  border-radius: 5rpx;
}

.bold-font {
  font-weight: bold;
  font-size: 40rpx;
  display: block;
}

.features-text {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.space-info {
  display: flex;
  margin: 0 40rpx;
}

.yellow-btn {
  background-color: #F2DF3A;
  width: 100rpx;
  height: 50rpx;
  padding: 12px 20px;
  font-weight: bold;
  border-radius: 5rpx;
  display: block;
  text-align: center;
  align-self: flex-end;
  position: absolute;
  right: 30rpx;
  margin-right: 20rpx;
}

.horizontal-line {
  content: " ";
  display: block;
  border-bottom: 1px solid #9E9E9E;
  margin: 40rpx 0;
}

.review-container {
  height: 200rpx;
  margin: 20rpx;
}

.review-btn {
  background-color: #F2DF3A;
  width: 200rpx;
  height: 50rpx;
  padding: 12px 20px;
  font-weight: bold;
  border-radius: 5rpx;
  display: block;
  text-align: center;
  align-self: flex-end;
  position: absolute;
  right: 30rpx;
  margin-right: 20rpx;
}

.rec-container {
  margin: 20rpx;
}

.card-product {
  overflow: hidden;
  height: 240rpx;
  background: white;
  box-shadow: 0 0 30rpx rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  border-radius: 10rpx;
}

.card-product image {
  height: 100%;
  width: 240rpx !important;
  object-fit: cover;
}

.card-product .h2 {
  font-size: 40rpx;
  font-weight: bold;
  margin: 10rpx 0;
}

.card-product .p {
  font-size: 30rpx;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  /* margin-top: 10rpx; */
}

.category-name {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  text-align: center;
  font-size: 40rpx;
  margin-top: 20rpx;
}

.card-product .card-product-infos {
  padding: 38rpx;
}

.bottom-margin {
  height: 230rpx;
}

.top-margin {
  height: 210rpx;
}

.map-icon {
  width: 100rpx !important;
  height: 100rpx !important;
  align-self: flex-end;
  position: absolute;
  right: 30rpx;
  margin-right: 20rpx;
}

.heart-icon {
  position: absolute;
  width: 100rpx;
  top: 20rpx;
  right: 20rpx;
}

.space-text{
  display: flex;
}