
.category-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.row-container {
  display: flex;
  margin: 10rpx 0;
}


.paw-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: bold;
}

.paw-icon {
  height: 100rpx;
  width: 100rpx;
  margin: 10rpx 65rpx;
}

.card {
  margin: 30rpx;
  border: .6rpx solid rgba(0,0,0,0.3);
  padding: 10rpx;
  border-radius: 5rpx;
  display: flex;
}

/* .space-img {
  width: 200rpx;
  height:200rpx;
} */

.card-product {
  overflow: hidden;
  height: 250rpx;
  background: white;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.1);
  display: flex;
  margin: 20rpx 40rpx;
  border-radius: 10rpx;
}

.card-product image {
  height: 100%;
  width: 240rpx !important;
  object-fit: cover;
}
.name-container {
  position: relative;
}
.card-product .h2 {
  font-size: 40rpx;
  font-weight: bold;
  margin: 20rpx 20rpx 0 20rpx;
}

.card-product .p {
  font-size: 28rpx;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 20rpx;
  /* margin-top: 10rpx; */
}

.card-product .card-product-infos {
  padding: 5rpx 20rpx 20rpx 20rpx;
  
}

.bottom-margin {
  height: 230rpx;
}

.top-margin {
  height: 250rpx;
}

.row-container text{
  font-size: 30rpx;
  font-family:'Raleway';
  font-weight: bold;
}
.feaures-text {
  margin: 30rpx 0;

  display: flex;
}

.feature {
  border: 2px solid #F2DF3A;
  padding: 5rpx 10rpx;
  border-radius: 25rpx;
  margin: 40rpx 20rpx 40rpx 0;
  
  
  }
