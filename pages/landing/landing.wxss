.category-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.row-container {
  display: flex;
}


.paw-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: bold;
}

.paw-icon {
  height: 100rpx;
  width: 100rpx;
  margin: 30rpx 65rpx;
}

.card {
  margin: 30rpx;
  border: .6rpx solid rgba(0,0,0,0.3);
  padding: 10rpx;
  border-radius: 5rpx;
  display: flex;
}

/* .space-img {
  width: 200rpx;
  height:200rpx;
} */

.card-product {
  overflow: hidden;
  height: 240rpx;
  background: white;
  box-shadow: 0 0 30rpx rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  margin: 20rpx;
  border-radius: 10rpx;
}

.card-product image {
  height: 100%;
  width: 240rpx !important;
  object-fit: cover;
}

.card-product .h2 {
  font-size: 40rpx;
  font-weight: bold;
  margin: 10rpx 0;
}

.card-product .p {
  font-size: 30rpx;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  /* margin-top: 10rpx; */
}

.card-product .card-product-infos {
  padding: 20rpx;
  width: 350rpx;
}

.bottom-margin {
  height: 230rpx;
}

.top-margin {
  height: 200rpx;
}

.row-container text{
  font-size: 30rpx;
  font-family:'Raleway';
  font-weight: bold;
}
