/* pages/dogprofile/dogprofile.wxss */

.top-margin {
  height: 240rpx;
}

.category-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.row-container {
  display: flex;
}


.paw-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: bold;
}

.dog-avatar {
  height: 180rpx;
  width: 180rpx;
  margin: 25rpx 25rpx;
}


.weui-input{
  height: 66rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  border: 1rpx solid #c2bfbf;
  border-radius: 8rpx;
  padding:10rpx;
  width: 590rpx;
}

.page-section-title{
  display: block;
  padding: 16rpx 0;
}

.btn-flat {
  color: rgb(119, 119, 119);
  padding: 16rpx 48rpx;
  border-radius: 16rpx;
  background:#F2DF3A;
  transition: background 0.3s ease;
  margin:64rpx 64rpx 180rpx 64rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  font-size: 42rpx;
  font-weight: bolder;
  /* width:235rpx !important; */
}

.btn-flat:hover {
  background: #d8c731;
  color: white;
  font-weight: bolder;
}

.page-section-title{
  display: flex;
  font-weight: bold;
  color:#706c6c;
  font-size: 35rpx;
  justify-content: space-between;
}

.mb {
  margin-bottom: 30rpx;
}