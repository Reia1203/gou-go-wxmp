/* pages/post/post.wxss */
.weui-input{
  height: 66rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  border: 1rpx solid #c2bfbf;
  border-radius: 8rpx;
}

.page-section-title{
  display: block;
  padding: 16rpx 0;
}

.container-form{
  padding: 32rpx 48rpx;
  margin: 16rpx;
}

.btn-flat {
  color: rgb(119, 119, 119);
  padding: 16rpx 48rpx;
  border-radius: 16rpx;
  background:#F2DF3A;
  transition: background 0.3s ease;
  margin:64rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  font-size: 42rpx;
  font-weight: bolder;
}

.btn-flat:hover {
  background: #d8c731;
  color: white;
  font-weight: bolder;
}

.page-section-title{
  font-weight: bold;
  color:#706c6c;
  font-size: 35rpx;
}

.h1 {
  margin: 16rpx;
  color: grey;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  font-size: 56rpx;
  font-weight: bold;
  display: block;
  text-align: center;
}

.contain{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
image{
  width:100%;
  height:600rpx;
}

.btn-red{
  color: #c2bfbf;
  padding: 16rpx 48rpx;
  border-radius: 16rpx;
  background: white;
  border:1rpx solid #c2bfbf;
  transition: background 0.3s ease;
  margin:64rpx;
}
.p{
  color:#7a7676;
  font-size: 32rpx;
}

.picker{
  border: 1rpx solid #c2bfbf;
  height: 66rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  border-radius: 8rpx;
  text-align: center;
}