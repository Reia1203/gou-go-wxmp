/* pages/review/review.wxss */
.card-trip {
  overflow: hidden;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  margin-top: 40rpx;
}

.card-trip > image {
  height: 200px;
  width: 100%;
  object-fit: cover;
}

.card-trip .h2 {
  font-size: 16px;
  font-weight: bold;
  margin: 0;
}

.card-trip .p {
  font-size: 12px;
  opacity: .7;
  margin: 0;
}


.card-trip .card-trip-infos {
  padding: 16px;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  position: relative;
}

.card-trip-infos .card-trip-user {
  position: absolute;
  right: 16px;
  top: -20px;
  width: 40px;
}

.textarea{
  height: 230rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  border: 1rpx solid black;
  border-radius: 8rpx;
}

.top-margin{
  height: 210rpx;
}
