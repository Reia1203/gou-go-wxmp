.textarea{
  height: 280rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  border: 2rpx solid #c2bfbf;
  border-radius: 8rpx;
  padding:20rpx;
  margin: 30rpx 1rpx;
}

.container{
  padding: 32rpx 48rpx;
  margin: 16rpx;
}

.top-margin {
  height: 210rpx;
}



.h2{
  font-weight: bold;
  /* color:#706c6c; */
  font-size: 45rpx;
  margin-bottom: 30rpx;
}

.contain{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.upload-image{
  width:100%;
  height:340rpx;
  margin-top: 30rpx;
}

.btn-edit{
  color: rgb(119, 119, 119);
  padding: 12rpx 2rpx;
  border-radius: 16rpx;
  background:#F2DF3A;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  font-size: 25rpx;
  transition: background 0.3s ease;
  font-weight: bolder;
  width: 80rpx !important;
  position: absolute;
  right: 180rpx;
  bottom: 360rpx;
  z-index: 100;
}

.btn-edit:hover {
  background: #d8c731;
  color: white;
  font-weight: bolder;
}


.btn-flat {
  color: rgb(119, 119, 119);
  padding: 16rpx 48rpx;
  border-radius: 16rpx;
  background:#F2DF3A;
  transition: background 0.3s ease;
  margin:64rpx 64rpx 180rpx 64rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  font-size: 42rpx;
  font-weight: bolder;
}

.btn-flat:hover {
  background: #d8c731;
  color: white;
  font-weight: bolder;
}

.scoreContent{
  display: inline-block;
  margin-top: 10rpx;
}

.boneLen{
  margin-right:30rpx;
  display: inline-block;
}

.scoreContent .boneLen:last-child{
  margin-right:0;
}

.bone{
  width:80rpx;
  height:80rpx;
  vertical-align: text-bottom;
  display: inline-block;
}