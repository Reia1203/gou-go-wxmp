/* pages/review/review.wxss */
.card-trip {
  overflow: hidden;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
}

.card-trip > image {
  height: 200px;
  width: 100%;
  object-fit: cover;
}

.card-trip .h2 {
  font-size: 16px;
  font-weight: bold;
  margin: 0;
}

.card-trip .p {
  font-size: 12px;
  opacity: .7;
  margin: 0;
}


.card-trip .card-trip-infos {
  padding: 16px;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  position: relative;
}

.card-trip-infos .card-trip-user {
  position: absolute;
  right: 16px;
  top: -20px;
  width: 40px;
}

.textarea{
  height: 300rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  border: 1rpx solid black;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.container{
  margin: 30rpx 30rpx;
  padding:30rpx 30rpx;
}

.top-margin {
  height: 210rpx;
}

.textarea{
  border: 1rpx solid #c2bfbf;
  border-radius: 8rpx;
  padding:10rpx;
  margin-top: 10rpx;
}

.h2{
  font-weight: bold;
  color:#706c6c;
  font-size: 35rpx;
}

.contain{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
image{
  width:100%;
  height:500rpx;
}

.btn-edit{
  color: rgb(119, 119, 119);
  padding: 12rpx 2rpx;
  border-radius: 16rpx;
  background:#F2DF3A;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  font-size: 30rpx;
  transition: background 0.3s ease;
  font-weight: bolder;
  width: 120rpx !important;
  position: absolute;
  right: 70rpx;
  top: 1600rpx;
  z-index: 100;
}

.btn-edit:hover {
  background: #d8c731;
  color: white;
  font-weight: bolder;
}


.btn-flat {
  color: rgb(119, 119, 119);
  padding: 16rpx 48rpx;
  border-radius: 16rpx;
  background:#F2DF3A;
  transition: background 0.3s ease;
  margin:64rpx 64rpx 180rpx 64rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  font-size: 42rpx;
  font-weight: bolder;
}

.btn-flat:hover {
  background: #d8c731;
  color: white;
  font-weight: bolder;
}
