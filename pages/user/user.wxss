.card-product {
  overflow: hidden;
  height: 290rpx;
  background: white;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.1);
  display: flex;
  margin: 20rpx 0rpx;
  border-radius: 10rpx;
}

.card-product image {
  height: 100%;
  width: 240rpx !important;
  object-fit: cover;
}
.name-container {
  position: relative;
  width: 60%;
  height: 100%;
}
.card-product .h2 {
  font-size: 40rpx;
  font-weight: bold;
  margin: 20rpx 20rpx 0 20rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}

.card-product .p {
  font-size: 28rpx;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}

