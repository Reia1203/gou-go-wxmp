.container {
  margin: 20px;
}
.userinfo {
  display: flex;
  align-items: center;
  color: black;
  height: 300rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 240rpx;
  height: 240rpx;
  margin: 30rpx 30rpx 30rpx 0;
  border-radius: 50%;
}

.userinfo-nickname {
  font-weight: bold;
  font-size: 45rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
}

.add-space {
  display: flex;
 font-size: larger;
 height: 60 rpx;
 /* justify-content: center; */
 align-items: center;
 font-weight: bold;
 margin-bottom: 50rpx;
}

.add-space image {
  margin: 20rpx;
}

.bold-text {
  font-weight: bold;
  font-size: larger;
}

.yellow-btn {
  background-color: #F2DF3A;
  width: 200rpx;
  height: 50rpx;
  padding: 12px 20px;
  font-weight: bold;
  border-radius: 5rpx;
  display: block;
  text-align: center;
  margin: 40rpx 0 20rpx;
}

.bottom-margin {
  height: 230rpx;
}

.top-margin {
  height: 200rpx;
}

.card-product {
  overflow: hidden;
  height: 240rpx;
  background: white;
  box-shadow: 0 0 30rpx rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  border-radius: 10rpx;
}

.card-product image {
  height: 100%;
  width: 240rpx !important;
  object-fit: cover;
}

.card-product .h2 {
  font-size: 40rpx;
  font-weight: bold;
  margin: 10rpx 0;
}

.card-product .p {
  font-size: 30rpx;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  /* margin-top: 10rpx; */
}

.category-name {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  text-align: center;
  font-size: 40rpx;
  margin-top: 20rpx;
}

.card-product .card-product-infos {
  padding: 38rpx;
}

.bottom-margin {
  height: 230rpx;
}

.top-margin {
  height: 200rpx;
}

button {
  background-color: #0078AA;
  color: white;
  width: 250rpx !important;
}
