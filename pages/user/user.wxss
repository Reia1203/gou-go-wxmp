.card-product {
  overflow: hidden;
  height: 290rpx;
  background: white;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.1);
  display: flex;
  margin: 20rpx 0rpx;
  border-radius: 10rpx;
}

.card-product image {
  height: 100%;
  width: 240rpx !important;
  object-fit: cover;
}
.name-container {
  position: relative;
  width: 60%;
