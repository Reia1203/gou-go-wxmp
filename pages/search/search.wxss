.weui-input {
  padding:10rpx;
}


.page-section-title {
  font-weight: bold;
  text-align: center;
  font-size: 40rpx;
  margin-top: 20rpx;
}

.search-container {
  display: flex;
  align-items: center;
  justify-content: center;
}


.search-container image{
  width: 60rpx;
  height: 60rpx;
  background-color: #F9F9F9;
}
.weui-input{
  height: 66rpx;
  width: 500rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.04);
  border: 1rpx solid #c2bfbf;
  border-radius: 8rpx;
  margin: 20rpx;
}


.search-button {
  background-color: white;
  padding: 0 !important;
  width: 30px !important;
  background-color: #F9F9F9;
}

.card-product {
  overflow: hidden;
  height: 240rpx;
  background: white;
  box-shadow: 0 0 30rpx rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  margin: 20rpx;
  border-radius: 10rpx;
}

.card-product image {
  height: 100%;
  width: 240rpx !important;
  object-fit: cover;
}

.card-product .h2 {
  font-size: 40rpx;
  font-weight: bold;
  margin: 10rpx 0;
}

.card-product .p {
  font-size: 30rpx;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  /* margin-top: 10rpx; */
}

.category-name {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  text-align: center;
  font-size: 40rpx;
  margin-top: 20rpx;
}

.card-product .card-product-infos {
  padding: 38rpx;
}


.reg-text {
  margin: 60rpx;
  text-align: center;
  font-size: 40rpx;
}

.bottom-margin {
  height: 230rpx;
}

.top-margin {
  height: 250rpx;
}

